{
  "name": "cms-test",
  "description": "",
  "version": "0.0.1",
  "repository": {
    "type": "git",
    "url": "https://github.com/mattlehrer/cms-test"
  },
  "scripts": {
    "dev": "sapper dev",
    "build": "sapper build --legacy",
    "export": "sapper export --legacy",
    "start": "node __sapper__/build",
    "lint": "eslint --ignore-path .gitignore --ext .js,.ts,.tsx src",
    "format": "npm run prettier -- --write",
    "prettier": "prettier --parser typescript --ignore-path .gitignore \"src/**/*.{js,json,ts,tsx}\"",
    "cy:run": "cypress run",
    "cy:open": "cypress open",
    "test": "run-p --race dev cy:run",
    "all": "npm run build && npm run start",
    "update": "ncu -u && npm install && git commit -m 'Update package.json'",
    "precommit": "node -v && lint-staged"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,svelte}": [
      "eslint"
    ],
    "*.{ts,tsx,js,jsx,json,css,md,svelte}": [
      "prettier --write",
      "git add"
    ]
  },
  "dependencies": {
    "@polka/send": "^0.4.0",
    "axios": "^0.21.3",
    "compression": "^1.7.4",
    "dotenv": "^8.2.0",
    "polka": "^0.5.2",
    "sirv": "^0.4.2"
  },
  "devDependencies": {
    "@babel/core": "^7.9.6",
    "@babel/plugin-syntax-dynamic-import": "^7.8.3",
    "@babel/plugin-transform-runtime": "^7.9.6",
    "@babel/preset-env": "^7.9.6",
    "@babel/runtime": "^7.9.6",
    "@fullhuman/postcss-purgecss": "^2.2.0",
    "@rollup/plugin-replace": "^2.3.2",
    "autoprefixer": "^9.7.6",
    "classnames": "^2.2.6",
    "cssnano": "^4.1.10",
    "eslint": "^7.0.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-plugin-cypress": "^2.10.3",
    "eslint-plugin-prettier": "^3.1.3",
    "eslint-plugin-svelte3": "^2.7.3",
    "husky": "^4.2.5",
    "lint-staged": "^10.2.2",
    "mixin-deep": ">=2.0.1",
    "npm-run-all": "^4.1.5",
    "postcss-fail-on-warn": "^0.1.0",
    "postcss-import": "^12.0.1",
    "prettier": "^2.0.5",
    "prettier-plugin-svelte": "^1.1.0",
    "ramda": "^0.27.0",
    "rollup": "^2.10.0",
    "rollup-plugin-babel": "^4.4.0",
    "rollup-plugin-commonjs": "^10.1.0",
    "rollup-plugin-json": "^4.0.0",
    "rollup-plugin-node-resolve": "^5.2.0",
    "rollup-plugin-postcss": "^3.1.1",
    "rollup-plugin-svelte": "^5.2.1",
    "rollup-plugin-terser": "^5.3.0",
    "sapper": "^0.27.13",
    "set-value": "^3.0.2",
    "svelte": "^3.22.2",
    "svelte-transitions": "^1.2.0",
    "tailwindcss": "^1.4.6"
  }
}
